<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@drawable/txt_dialog"
            android:text="@string/Configuracio"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#636363"/>

        <TextView
            android:id="@+id/txtPreferencias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/txt_preferencias"
            android:text="@string/Preferencias"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#466aef"/>

        <TextView
            android:id="@+id/txtEditar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/txt_editar"
            android:text="@string/EditarProyecto"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#466aef"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#000000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtCancelar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/txt_cancelar"
            android:text="@string/Cancelar"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#466aef"/>


    </LinearLayout>

</LinearLayout>